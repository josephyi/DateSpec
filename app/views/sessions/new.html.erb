<section>
  <%= render "layouts/flash" %>
  <h1>Log in</h1>
  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email], :required => true %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <input type="password" name="password" required/>
    </p>
    <p class="button"><%= submit_tag "Log in" %></p>
  <% end %>
</section>

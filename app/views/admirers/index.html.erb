<section>
  <%= render "layouts/sidebar" %>
  <%= render "layouts/flash" %>

  <section class="main">

        <section>
          <h1>Admirers</h1>
          <% their_admirers.each do |admirer| %>
          <% if admirer.user_approved%>
          <ul>
            <li>
              <h3> <%= User.find(admirer.admirer_id).username %></h3>
              <p>
                <%= User.find(admirer.admirer_id).bio %>
              </p>
              <section>
                <a href="<%=user_admirer_path(current_user.id, admirer.id)%>">See Responses</a>
                <form action="<%=user_admirer_path(current_user.id, admirer.id)%>" method="post" onclick="return confirm('Are you sure you want to remove this Admirer?')">
                  <input type='hidden' name="_method" value="DELETE" />
                  <button type="submit">Not Interested</button>
                </form>
              </section>
            </li>
          </ul>
        </section>
        <% end %>
      <% end %>
  </section>

</section>

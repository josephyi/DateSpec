<section>
  <section class="navbar">

  <%= render "layouts/sidebar" %>
  <%= render "layouts/flash" %>

  <section class="main">
        <section>
          <h1>Your Profile</h1>
          <h2> <%= @user.username %></h2>

          <h3>Bio:</h3>
          <p>
            <%= @user.bio %>
          </p>

          <h3>Question 1</h3>
          <p>
            <%= @user.question_1 %>
          </p>

          <h3>Question 2</h3>
          <p>
            <%= @user.question_2 %>
          </p>

          <h3>Question 3</h3>
          <p>
            <%= @user.question_3 %>
          </p>
          <section>
            <a href="/users/<%=current_user.id%>/edit">Edit My Profile</a>
          </section>
          <form action="/users/<%=current_user.id%>" method="post" onclick="return confirm('Are you sure you want to deactivate your account?')">
            <input type="hidden" name="_method" value="DELETE"/>
            <button>Deactivate Account</button>
          </form>
        </section>
  </section>

</section>
